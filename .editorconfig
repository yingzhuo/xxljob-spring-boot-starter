# https://editorconfig.org/

root = true

[*]
end_of_line = lf
charset = utf-8
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{groovy,java,kt,scala,xml}]
indent_style = tab
indent_size = 4

[*.{json,json5}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.conf]
indent_style = space
indent_size = 2

[makefile]
indent_style = tab
indent_size = 2
